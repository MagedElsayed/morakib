<%- include('./includes/head.ejs')%>
<body >
	<div class="wrapper">
			<%- include("./includes/header") %>
			<%- include("./includes/sidebar.ejs") %>
			<div class="main-panel">
				<div class="content">
					<div class="container-fluid">
						<h4 class="page-title">الرئيسية</h4>
						<div class="row">
							<div class="col-md-4">
								<div class="card card-stats card-warning">
									<div class="card-body ">
										<div class="row">
											<div class="col-5">
												<div class="icon-big text-center">
													<i class="la la-check-circle"></i>
												</div>
											</div>
											<div class="col-7 d-flex align-items-center">
												<div class="numbers">
														<h4 class="card-title"><%=gawlat%></h4>
													<p class="card-category"> الجولات</p>
													
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="col-md-4">
								<div class="card card-stats card-success">
									<div class="card-body ">
										<div class="row">
											<div class="col-5">
												<div class="icon-big text-center">
													<i class="la la-users"></i>
												</div>
											</div>
											<div class="col-7 d-flex align-items-center">
												<div class="numbers">
														<h4 class="card-title"><%= users%></h4>
													<p class="card-category">مراقب</p>
													
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

							<div class="col-md-4">
								<div class="card card-stats card-primary">
									<div class="card-body ">
										<div class="row">
											<div class="col-5">
												<div class="icon-big text-center">
													<i class="la la-hourglass-start"></i>
												</div>
											</div>
											<div class="col-7 d-flex align-items-center">
												<div class="numbers">
													
															<h1 class="card-title"> <%= penalty%> </h1>

													<p class="card-category">مخالفات  </p>
													
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

						</div>

						<div class="row">

							
							<div class="col-md-6">
								<div class="card">
									<div class="card-header ">
										<h4 class="card-title">أعلي  المراقبين نشاطاً</h4>
									</div>
									<div class="card-body">
										
										<table class="table table-striped table-hover">
											<thead>
												<tr>
													<th scope="col">الإسم</th>
													<th scope="col"> البريد الاكترونى</th>
													<th scope="col">البيانات الشخصية </th>
												</tr>
											</thead>
											<tbody>
												<% for (let user of lastUsers){%>
												<tr>
													<td> <%= user.first_name%> </td>
													<td><%= user.email%></td>
													<td>
														<a  href="/profile/<%=user.username%>" class="btn btn-xs btn-dark align">
															التفاصيل
														</a>	
													</td>
												</tr>
												<%}%>

											</tbody>
										</table>
									</div>
								</div>
							</div>
							<div class="col-md-6">
								<div class="card card-tasks">
									<div class="card-header ">
											<h4 class="card-title">اخر 5 جولات    </h4>
										</div>
									<div class="card-body ">
										<div class="table-full-width">
											<table class="table">
												<thead>

													<tr>
														
														<th>الإسم</th>
														<th>النوع</th>
														<th>التفاصيل</th>
														
													</tr>
													
												</thead>
												<tbody>

													
											<% for (let gawla of lastGawlat){%>

													<tr>
														
														<td> <%= gawla.name%> </td>
														<td class="td-actions text-right">
															<%= gawla.pen_class.name%>
														</td>
														<td>
																<a  href="/gawla/<%= gawla.id%>" class="btn btn-xs btn-dark align">
																	التفاصيل
																</a>	
															</td>
													</tr>
													<%}%>
												</tbody>
											</table>
										</div>
									</div>
									
								</div>
							</div>
						</div>
					</div>
				</div>


			</div>
		</div>
	</div>

	<%- include('./includes/footer.ejs')%>
</body>
</html>