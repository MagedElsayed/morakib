<%- include('../includes/head.ejs')%>


<body >
	<div class="wrapper">
			<%- include("../includes/header") %>

			<%- include("../includes/sidebar") %>
			<div class="main-panel">
				<div class="content">
					<div class="container-fluid">
						<h4 class="page-title">إظهار بيانات الجولة</h4>
						<div class="row">
							<div class="col-md-5">
								<div class="card">
									<div class="card-header ">
										<h4 class="card-title">الموقع على الخريطة</h4>
									</div>
									<div class="card-body">
										
										<iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1207.4311473965042!2d45.56922147856306!3d25.625983588524143!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e2afdd6d94d4f4d%3A0x9eefe914ead2d141!2sSalman+Grocery!5e0!3m2!1sen!2seg!4v1559419755781!5m2!1sen!2seg"></iframe>

								</div>
								<div id="flash">

								</div>
								</div>
							</div>
							<div class="col-md-7">
								<div class="card card-tasks">
									<div class="card-header ">
										<h4 class="card-title">تفاصيل الجولة</h4>
									</div>
                                    <div class="card-body">
											<div class="form-group">
												<h6  class="text-danger" for="squareInput">اسم الشخص / الشركة</h6>
                                                <p class="form-control-plaintext" id="squareInput"> <%= gawla.name%> </p>
                                            </div>

                                            <div class="form-group">
                                                    <h6 class="text-danger" for="squareInput">جهة الإتصال</h6>
                                                    <p class="form-control-plaintext" id="squareInput" > <%= gawla.phone_no%> </p>
                                                </div>
											<div class="form-group">
												<h6 class="text-danger" for="squareSelect">هدف الجولة</h6>
                                                <%if(gawla.target==='organizaiton'){%>
                                                    <p class="form-control-plaintext" id="squareInput" > جولة على منظمة </p>
                                                    <%}else{%>
                                                        <p class="form-control-plaintext"" id="squareInput" > جولة على افراد </p>
                                                        <%}%>
                                            </div>
                                            <div class="form-group">
                                                    <h6 class="text-danger" for="squareInput">العنوان</h6>
                                                    <p class="form-control-plaintext" id="squareInput" > <%= gawla.address%> </p>
                                                </div>
                                                <div class="form-group">
                                                    <h6 class="text-danger" for="squareInput">نوع الجولة </h6>
                                                    <p class="form-control-plaintext" id="squareInput" > <%= gawla.pen_class.name%> </p>
                                                </div>
                                                <div class="form-group">
                                                        <h6 class="text-danger" for="squareInput">رقم الرخصة</h6>
                                                        <p class="form-control-plaintext" id="squareInput" > <%= gawla.licesnce_no%> </p>
                                                    </div>
                                                    

											<div class="form-group">
												<h6 class="text-danger" for="pillSelect">المراقب المكلف بالجولة </h6>
                                                <p class="form-control-plaintext"  > <%=gawla.inspector.first_name%> <%= gawla.inspector.last_name%> </p>

											</div>
														
										</div>
										<%if(decodedToken.role.role == 'manager'){%>
										<a href="/gawla/edit/<%= gawla.id%>" class="btn btn-outline-info">تعديل</a>   
										<%}%>
										<%if(decodedToken.role.role == 'inspector'){%>
											<button value="<%= gawla.id%>" id="done" class="btn btn-outline-info">انهاء بدون مخالفات </button>   

											<%- include('../includes/penalty.ejs')%>
										<!-- <a href="/gawla/edit/<%= gawla.id%>" class="btn btn-outline-danger">تحرير مخالفة </a>         -->
										<%}%>
								</div>
							</div>
						</div>
					</div>
				</div>


			</div>
		</div>
	</div>




</body>

<script src="/js/edit-gawla.js"></script>
<%- include('../includes/footer.ejs')%>
</html>