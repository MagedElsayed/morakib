<%- include('../includes/head.ejs')%>


<body >
	<div class="wrapper">
			<%- include("../includes/header") %>

			<%- include("../includes/sidebar") %>
			<div class="main-panel">
				<div class="content">
					<div class="container-fluid">
						<h4 class="page-title">إضافة جولة جديدة</h4>
						<div class="row">
							<div class="col-md-5">
								<div class="card">
									<div class="card-header ">
										<h4 class="card-title">الموقع على الخريطة</h4>
									</div>
									<div class="card-body">
										
										<iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1207.4311473965042!2d45.56922147856306!3d25.625983588524143!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e2afdd6d94d4f4d%3A0x9eefe914ead2d141!2sSalman+Grocery!5e0!3m2!1sen!2seg!4v1559419755781!5m2!1sen!2seg"></iframe>

								</div>
								<div id="flash">

								</div>
								</div>
							</div>
							<div class="col-md-7">
								<div class="card card-tasks">
									<div class="card-header ">
										<h4 class="card-title">تفاصيل الجولة</h4>
									</div>
                                    <div class="card-body">
										<form action="/gawla/edit/<%= gawla.id%>" method="POST">
											<div class="form-group">
												<label for="squareInput">اسم الشخص / الشركة</label>
												<input type="text" class="form-control input-square" id="squareInput" name="name"" value="<%= gawla.name%>" required>
                                            </div>
                                            <div class="form-group">
                                                    <label for="squareInput">جهة الإتصال</label>
                                                    <input type="text" class="form-control input-square" id="squareInput" name="phone" value="<%= gawla.phone_no%>" required>
                                                </div>
											<div class="form-group">
												<label for="squareSelect">نوع الجولة</label>
												<select class="form-control input-square" id="squareSelect" name="type">
													<% for (let obj of classes){ %>
														<% if(gawla.class_id == obj.id){%>
															<option value="<%=obj.id%>" selected > <%= obj.name%> </option>
														<%}else{%>
														<option value="<%=obj.id%>"  > <%= obj.names%> </option>
															<%}%>
													<% }%>
													
												
												</select>
                                            </div>
                                            <div class="form-group">
                                                    <label for="squareInput">العنوان</label>
                                                    <input type="text" class="form-control input-square" id="squareInput" name="address" value="<%= gawla.Address%>" required>
                                                </div>
                                                <div class="form-group">
                                                        <label for="squareInput">رقم الرخصة</label>
                                                        <input type="number" class="form-control input-square" id="squareInput" name="liscene_num" value="<%= gawla.licesnce_no%>" required >
                                                    </div>
                                                    

											<div class="form-group">
												<label for="pillSelect">تعيين مراقب</label>
												<select class="form-control input-pill" id="pillSelect" name="inspector">
													<% for (let obj of users){ %>
														<option value="<%=obj.id%>" > <%= obj.first_name%> <%= obj.last_name%> </option>
														<% }%>
												</select>
											</div>
														
										</div>
										<button type="submit" id="submit" class="btn btn-outline-info">تعديل</button>
									</form>
                                        <!-- <div class="card-action">
                                                <button class="btn btn-default" data-toggle="modal" data-target="#myModal">تحرير مخالفة</button>
                                                <span>|</span>
                                                <button class="btn btn-success">حفظ </button>
                                                <button class="btn btn-danger">رجوع</button>
                                            </div> -->
								</div>
							</div>
						</div>
					</div>
				</div>


			</div>
		</div>
	</div>




</body>

<script src="/js/edit-gawla.js"></script>
<%- include('../includes/footer.ejs')%>
</html>