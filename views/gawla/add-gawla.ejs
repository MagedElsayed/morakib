<%- include('../includes/head.ejs')%>


<body >
	<div class="wrapper">
			<%- include("../includes/header") %>

			<%- include("../includes/sidebar") %>
			<div class="main-panel">
				<div class="content">
					<div class="container-fluid">
						<h4 class="page-title">إضافة جولة جديدة</h4>
						<div class="row">
							<div class="col-md-5">
								<div class="card">
									<div class="card-header ">
										<h4 class="card-title">الموقع على الخريطة</h4>
									</div>
									<div class="card-body">
										
                                            <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1207.4311473965042!2d45.56922147856306!3d25.625983588524143!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e2afdd6d94d4f4d%3A0x9eefe914ead2d141!2sSalman+Grocery!5e0!3m2!1sen!2seg!4v1559419755781!5m2!1sen!2seg"></iframe>

									</div>
								</div>
							</div>
							<div class="col-md-7">
								<div class="card card-tasks">
									<div class="card-header ">
										<h4 class="card-title">تفاصيل الجولة</h4>
									</div>
                                    <div class="card-body">
										<form action="/gawla/add" method="POST">
											<div class="form-group">
												<label for="squareInput">اسم الشخص / الشركة</label>
												<input type="text" class="form-control input-square" id="squareInput" name="name"" >
                                            </div>
                                            <div class="form-group">
                                                    <label for="squareInput">جهة الإتصال</label>
                                                    <input type="text" class="form-control input-square" id="squareInput" name="phone">
                                                </div>
											<div class="form-group">
												<label for="squareSelect">نوع الجولة</label>
												<select class="form-control input-square" id="squareSelect" name="type">
													<% for (let obj of classes){ %>
													<option value="<%=obj.id%>" > <%= obj.name%> </option>
													<% }%>
													
												
												</select>
                                            </div>
                                            <div class="form-group">
                                                    <label for="squareInput">العنوان</label>
                                                    <input type="text" class="form-control input-square" id="squareInput" name="address" >
                                                </div>
                                                <div class="form-group">
                                                        <label for="squareInput">رقم الرخصة</label>
                                                        <input type="number" class="form-control input-square" id="squareInput" name="liscene_num" >
                                                    </div>
                                                    <div class="form-group">
															<input type="radio" name="target" value="organizaiton" style="position:static"> المنظمة
															<input type="radio" name="target" value="individual" style="position:static"> افراد
                                                        </div>

											<div class="form-group">
												<label for="pillSelect">تعيين مراقب</label>
												<select class="form-control input-pill" id="pillSelect" name="inspector">
													<% for (let obj of inspectors){ %>
														<option value="<%=obj.id%>" > <%= obj.username%> </option>
														<% }%>
												</select>
											</div>
														
										</div>
										<button type="submit" class="btn btn-primary">إنهاء</button>
									</form>
                                        <div class="card-action">
                                                <button class="btn btn-default" data-toggle="modal" data-target="#myModal">تحرير مخالفة</button>
                                                <span>|</span>
                                                <button class="btn btn-success">حفظ </button>
                                                <button class="btn btn-danger">رجوع</button>
                                            </div>
								</div>
							</div>
						</div>
					</div>
				</div>


			</div>
		</div>
	</div>


<!-- The Modal -->
<div class="modal fade" id="myModal">
	<div class="modal-dialog modal-lg">
	  <div class="modal-content">
  
		<!-- Modal Header -->
		<div class="modal-header">
		  <h4 class="modal-title">المخالفات</h4>
		  <button type="button" class="close" data-dismiss="modal">&times;</button>
		</div>
  
		<!-- Modal body -->
		<div class="modal-body">
		  

				<div class="row clearfix">
						<div class="col-md-12 table-responsive">
							<table class="table table-bordered table-hover table-sortable" id="tab_logic">
								<thead>
									<tr >
										<th class="text-center">
											المخالفة
										</th>

										<th class="text-center">
											ملاحظات
										</th>
										<th class="text-center">
											البند
										</th>
										<th class="text-center" style="border-top: 1px solid #ffffff; border-right: 1px solid #ffffff;">
										</th>
									</tr>
								</thead>
								<tbody>
									<tr id='addr0' data-id="0" class="hidden">
										<td data-name="name">
											<input type="text" name='name0'  placeholder='اسم المخالفة' class="form-control"/>
										</td>

										<td data-name="desc">
											<textarea name="desc0" placeholder="وصف مختصر للمخالفة" class="form-control"></textarea>
										</td>
										<td data-name="sel">
											<select name="sel0" class="form-control">
												<option value="">البند</option>
												<option value="1">صحية</option>
												<option value="2">بناء</option>
												<option value="3">كهرباء</option>
											</select>
										</td>
										<td data-name="del">
											<button name="del0" class='btn btn-danger glyphicon glyphicon-remove row-remove'><span aria-hidden="true">×</span></button>
										</td>
									</tr>
								</tbody>
							</table>
						</div>
					</div>
					<a id="add_row" class="btn btn-success float-right">إضافة مخالفة</a>

		</div>
  
		<!-- Modal footer -->
		<div class="modal-footer">
		  <button type="button" class="btn btn-danger" data-dismiss="modal">إغلاق</button>
		</div>
  
	  </div>
	</div>
  </div>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
<script>
$(document).ready(function() {
    $("#add_row").on("click", function() {
        // Dynamic Rows Code
        
        // Get max row id and set new id
        var newid = 0;
        $.each($("#tab_logic tr"), function() {
            if (parseInt($(this).data("id")) > newid) {
                newid = parseInt($(this).data("id"));
            }
        });
        newid++;
        
        var tr = $("<tr></tr>", {
            id: "addr"+newid,
            "data-id": newid
        });
        
        // loop through each td and create new elements with name of newid
        $.each($("#tab_logic tbody tr:nth(0) td"), function() {
            var td;
            var cur_td = $(this);
            
            var children = cur_td.children();
            
            // add new td and element if it has a nane
            if ($(this).data("name") !== undefined) {
                td = $("<td></td>", {
                    "data-name": $(cur_td).data("name")
                });
                
                var c = $(cur_td).find($(children[0]).prop('tagName')).clone().val("");
                c.attr("name", $(cur_td).data("name") + newid);
                c.appendTo($(td));
                td.appendTo($(tr));
            } else {
                td = $("<td></td>", {
                    'text': $('#tab_logic tr').length
                }).appendTo($(tr));
            }
        });
        
        // add delete button and td
        /*
        $("<td></td>").append(
            $("<button class='btn btn-danger glyphicon glyphicon-remove row-remove'></button>")
                .click(function() {
                    $(this).closest("tr").remove();
                })
        ).appendTo($(tr));
        */
        
        // add the new row
        $(tr).appendTo($('#tab_logic'));
        
        $(tr).find("td button.row-remove").on("click", function() {
             $(this).closest("tr").remove();
        });
});




    // Sortable Code
    var fixHelperModified = function(e, tr) {
        var $originals = tr.children();
        var $helper = tr.clone();
    
        $helper.children().each(function(index) {
            $(this).width($originals.eq(index).width())
        });
        
        return $helper;
    };
  
    $(".table-sortable tbody").sortable({
        helper: fixHelperModified      
    }).disableSelection();

    $(".table-sortable thead").disableSelection();



    $("#add_row").trigger("click");
});
</script>

</body>

