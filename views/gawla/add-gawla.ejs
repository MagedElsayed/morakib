<%- include('../includes/head.ejs')%>


<body >
	<div class="wrapper">
			<%- include("../includes/header") %>

			<%- include("../includes/sidebar") %>
			<div class="main-panel">
				<div class="content">
					<div class="container-fluid">
						<h4 class="page-title">إضافة جولة جديدة</h4>
						<div class="row">
							<div class="col-md-5">
								<div class="card">
									<div class="card-header ">
										<h4 class="card-title">الموقع على الخريطة</h4>
									</div>
									<div class="card-body">
										
                                            <iframe width="100%" height="350" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1207.4311473965042!2d45.56922147856306!3d25.625983588524143!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e2afdd6d94d4f4d%3A0x9eefe914ead2d141!2sSalman+Grocery!5e0!3m2!1sen!2seg!4v1559419755781!5m2!1sen!2seg"></iframe>

									</div>
									<div id="flash">

									</div>
								</div>
							</div>
							<div class="col-md-7">
								<div class="card card-tasks">
									<div class="card-header ">
										<h4 class="card-title">تفاصيل الجولة</h4>
									</div>
                                    <div class="card-body">
										<!-- <form action="/gawla/add" method="POST" id="gawla-form"> -->
											<div class="form-group">
												<label for="squareInput">اسم الشخص / الشركة</label>
												<input type="text" class="form-control input-square" id="squareInput" name="name" required >
                                            </div>
                                            <div class="form-group">
                                                    <label for="squareInput">جهة الإتصال</label>
                                                    <input type="number" class="form-control input-square" id="squareInput" name="phone" required  >
                                                </div>
											<div class="form-group">
												<label for="squareSelect">نوع الجولة</label>
												<select class="form-control input-square" id="squareSelect" name="type">
													<% for (let obj of classes){ %>
													<option value="<%=obj.id%>" > <%= obj.name%> </option>
													<% }%>
													
												
												</select>
                                            </div>
                                            <div class="form-group">
                                                    <label for="squareInput">العنوان</label>
                                                    <input type="text" class="form-control input-square" id="squareInput" name="address" >
                                                </div>
                                                <div class="form-group">
                                                        <label for="squareInput">رقم الرخصة</label>
                                                        <input type="number" class="form-control input-square" id="squareInput" name="liscene_num"  >
                                                    </div>
                                                    <div class="form-group">
															<input type="radio" name="target" value="organizaiton" style="position:static" checked> المنظمة
															<input type="radio" name="target" value="individual" style="position:static"> افراد
                                                        </div>

											<div class="form-group">
												<label for="pillSelect">تعيين مراقب</label>
												<select class="form-control input-pill" id="pillSelect" name="inspector">
													<% for (let obj of users){ %>
														<option value="<%=obj.id%>" > <%= obj.first_name%> <%= obj.last_name%> </option>
														<% }%>
												</select>
											</div>
														
										</div>
										<button  class="btn btn-primary" id="submit" >إنهاء</button>
									<!-- </form> -->
                                    
										
								</div>
							</div>
						</div>
					</div>
				</div>


			</div>
		</div>
	</div>

</body>

<script src="/js/add-gawla.js"></script>
</html>