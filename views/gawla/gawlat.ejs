    <script>
    
      
document.getElementById("inputState").onchange = function(){
    console.log("yarb");
    let selectEle = document.getElementById("inputState").value;
    let eleLength = document.getElementsByClassName("gawlaSearch").length;
    for(i=0 ; i<eleLength ; i++){
        document.getElementsByClassName("gawlaSearch")[i].parentElement.classList.remove("not-active")
        let valueEle = document.getElementsByClassName("gawlaSearch")[i].innerText;
        if(valueEle != selectEle){
            document.getElementsByClassName("gawlaSearch")[i].parentElement.classList.add("not-active");
        }
    }

    if(selectEle == "all"){
        for(i=0 ; i<eleLength ; i++){
            document.getElementsByClassName("gawlaSearch")[i].parentElement.classList.remove("not-active")
        }
    }
}
    </script>
