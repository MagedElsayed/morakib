<div class="sidebar">
        <div class="scrollbar-inner sidebar-wrapper">
            <div class="user">
                <div class="photo">
                    <img src="/img/avatars/<%= user.avatar %>">
                </div>
                <div class="info">
                    <a class="" data-toggle="collapse" href="#collapseExample" aria-expanded="true">
                        <span>
                            <%=user.first_name %> <%= user.last_name %> 
                            <span class="user-level"><strong>
                                <% if(decodedToken.role == 'manager'){ %>
                                    مديــر
                                <% } else if(decodedToken.role == 'admin'){ %>
                                    أدمن
                                <% } else if(decodedToken.role == 'inspector'){ %>
                                    مراقب
                                <% } %>
                            </strong></span>
                            <span class="caret"></span>
                            <br/>
                            <br/>
                            <a class="btn btn-danger logout-btn"><i class="la  la-sign-out"></i>خــروج</a>
                        </span>
                    </a>
                    <div class="clearfix"></div>
    
                    <div class="collapse in" id="collapseExample" aria-expanded="true" style="">
                        <ul class="nav">
    
                            <li>
                                <a href="/profile/<%= user.username %>">
                                    <span class="link-collapse">البيانات الشخصية</span>
                                </a>
                            </li>
                            <li>
                                <a href="/profile/<%= user.username %>/edit">
                                    <span class="link-collapse">تعديل البيانات الشخصية</span>
                                </a>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
            <ul class="nav">
                <li class="nav-item active">
                    <a href="/"> <!-- content depends on the role-->
                        <i class="la la-home"></i>
                        <p>الرئيسية</p>
                    </a>
                </li>
                <%if(decodedToken.role.role !== 'admin'){%>
                <li class="nav-item">
                    <a href="/gawlat"> <!-- content depends on the role-->
                        <i class="la la-street-view"></i>
                        <p>الجولات</p>
                    </a>
                </li>
                <%}%>
                
                <% if(decodedToken.role.role !== 'admin'){ %>
                <li class="nav-item">
                    <a href="/penalty/penalties/"> <!-- content depends on the role-->
                        <i class="la la-hourglass-start"></i>
                            <p>مخالفات قيد الانتظار</p>
                        </a>
                    </li>
                <% } %>
                <% if(decodedToken.role.role == 'manager'){ %>
                <li class="nav-item">
                    <a href="/penalty/approvedPenalty"> <!-- content depends on the role-->
                        <i class="la la-hourglass-start"></i>
                            <p>مخالفات منتهية</p>
                        </a>
                    </li>
                <% } %>
                <% if(decodedToken.role.role !== 'inspector'){ %>
                <li class="nav-item">
                    <%if(decodedToken.role.role == 'admin'){%>
                        <a href="/admin/inspectors/list">
                    <%}else{%>
                        <a href="/manager/inspectors">
                    <%}%>
                        <i class="la la-users"></i>
                            <p>المراقبين</p>
                        </a>
                    </li>
                <% } %>

                <% if(decodedToken.role.role == "admin") { %>
                    <li class="nav-item">
                        <a href="/admin/managers/list"> <!-- content depends on the role-->
                            <i class="la la-user-secret"></i>
                            <p>المديرين</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/pen_classes/list"> <!-- content depends on the role-->
                            <i class="la la-sliders"></i>
                            <p>الفئات</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/pen_types/list"> <!-- content depends on the role-->
                            <i class="la la-sitemap"></i>
                            <p>الأنواع</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/admin/pen_terms/list"> <!-- content depends on the role-->
                            <i class="la la-bars"></i>
                            <p>البنود</p>
                        </a>
                    </li>
                <% } %>


                <% if(decodedToken.role.role === 'manager'){ %>
                    <li class="nav-item update-pro">
                        <a href="/gawla/add" class="btn btn-default">
                            <i class="la la-street-view"></i>
                                <p>اضافة جولة</p>
                        </a>
                    </li>
                <% } else if(decodedToken.role.role == 'admin'){ %>
                    
                    <li class="nav-item update-pro">
                        <a href="/admin/employee/add" class="btn btn-default">
                            <i class="la la-street-view"></i>
                            <p>اضافة موظف</p>
                        </a>
                    </li>
                <% } %>  
            </ul>
        </div>
    </div>